<UserControl x:Class="SlowPerfWpfApp.FilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SlowPerfWpfApp"
             mc:Ignorable="d" 
             d:DesignHeight="18" d:DesignWidth="300"
             Height="26">
    <Grid>
        <TextBox x:Name="txtFilter" FontSize="18" TextChanged="TxtFilter_OnTextChanged" GotFocus="TxtFilter_OnGotFocus" LostFocus="TxtFilter_OnLostFocus"></TextBox>
        <TextBlock x:Name="WaterMark" IsHitTestVisible="False" Foreground="Gray" Text="Filter" FontSize="18" Padding="2 0" />
    </Grid>
</UserControl>
